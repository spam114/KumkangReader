<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnScrap"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="불량입력"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="#AAAAAA"
            app:elevation="20dp"
            app:icon="@drawable/outline_drive_file_rename_outline_white_48"
            app:iconTint="#FFFFFF"
            app:strokeColor="#AAAAAA" />

        <Button
            android:id="@+id/btnDeleteScrap"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="불량삭제"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="#AAAAAA"
            app:elevation="20dp"
            app:icon="@drawable/outline_delete_sweep_white_48"
            app:iconTint="#FFFFFF"
            app:strokeColor="#AAAAAA" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="실적삭제"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="#AAAAAA"
            app:elevation="20dp"
            app:icon="@drawable/outline_delete_sweep_white_48"
            app:iconTint="#FFFFFF"
            app:strokeColor="#AAAAAA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="닫기"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>